{
  "name": "coloring-game",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "node tests/setup/createTestImages.js && jest --detectOpenHandles",
    "test:payment": "jest tests/payment.test.js --detectOpenHandles",
    "test:payment:ios": "jest tests/payment.test.js -t 'Apple Pay' --detectOpenHandles",
    "test:payment:android": "jest tests/payment.test.js -t 'Google Play' --detectOpenHandles",
    "test:experiment": "jest tests/experiment.test.js --detectOpenHandles",
    "test:picture": "jest tests/picture.test.js --detectOpenHandles",
    "test:auth": "jest tests/auth.test.js --detectOpenHandles",
    "test:base": "cross-env NODE_ENV=test jest tests/base.test.js --detectOpenHandles",
    "test:user": "jest tests/user.test.js --detectOpenHandles",
    "test:admin": "jest tests/admin.test.js --detectOpenHandles",
    "test:verbose": "jest --verbose --detectOpenHandles",
    "test:all": "cross-env NODE_ENV=test jest tests/all.test.js --detectOpenHandles",
    "test:workflow": "cross-env NODE_ENV=test jest tests/workflow.test.js --detectOpenHandles",
    "test:v2": "cross-env NODE_ENV=test jest tests/v2.test.js --detectOpenHandles"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "axios": "^1.6.8",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "googleapis": "^146.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.13.0",
    "mongoose": "^8.13.0",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "sharp": "^0.33.5",
    "supertest": "^7.0.0"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testEnvironment": "node"
  }
}
